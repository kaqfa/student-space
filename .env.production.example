# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database - PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/banksoal_db

# Optional: Specific database config
DATABASE_ENGINE=postgresql
DATABASE_NAME=banksoal_db
DATABASE_USER=banksoal_user
DATABASE_PASSWORD=your-db-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Static & Media Files
STATIC_ROOT=/var/www/banksoal/staticfiles
MEDIA_ROOT=/var/www/banksoal/media

# Security
SECURE_SSL_REDIRECT=True

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@banksoal.com

# Logging
DJANGO_LOG_LEVEL=INFO

# Optional: Redis Cache
REDIS_URL=redis://localhost:6379/1

# Optional: Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn-here
