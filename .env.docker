# ============================================
# Student Space - Docker Environment Configuration
# For local Passenger testing before Domainesia deployment
# ============================================

# ============================================
# Django Settings
# ============================================
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=docker-dev-secret-key-change-this-in-real-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,student-space-passenger

# ============================================
# Database Configuration (PostgreSQL)
# Matches Domainesia PostgreSQL setup
# ============================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=studentspace
DB_USER=student
DB_PASSWORD=student123
DB_HOST=db
DB_PORT=5432

# ============================================
# Static & Media Files
# ============================================
STATIC_URL=/static/
STATIC_ROOT=/var/www/student-space/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/student-space/media

# ============================================
# Superuser Configuration
# ============================================
CREATE_SUPERUSER=true
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@localhost.com
DJANGO_SUPERUSER_PASSWORD=admin123

# ============================================
# Security Settings (Production Mode)
# ============================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=SAMEORIGIN

# ============================================
# Email Configuration (Optional - for testing)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For testing with real email, uncomment and configure:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Performance & Caching (Optional)
# ============================================
# REDIS_URL=redis://redis:6379/0

# ============================================
# Third-party Services (if needed)
# ============================================
# SENTRY_DSN=your-sentry-dsn-here

# ============================================
# Application-specific Settings
# ============================================
# Add your custom app settings here
SITE_NAME=Student Space
SITE_URL=http://localhost:8080

# ============================================
# Passenger-specific
# ============================================
PASSENGER_APP_ENV=production
